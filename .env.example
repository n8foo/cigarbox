# CigarBox Docker Environment Configuration
# Copy this file to .env and customize for your environment

# Flask environment
FLASK_ENV=production

# Gunicorn workers (defaults to CPU cores * 2 + 1)
GUNICORN_WORKERS=4

# Ports exposed by nginx
HTTP_PORT=8088
HTTPS_PORT=8443

# Initial admin user (only used on first bootstrap)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme

# Optional: If you want to set an initial API key
# ADMIN_API_KEY=your-secure-random-key-here
